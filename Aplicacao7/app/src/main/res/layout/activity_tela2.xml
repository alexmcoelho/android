<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_tela2"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    tools:context="com.example.alexm.aplicacao7.Tela2">

    <TextView
        android:text="EndereÃ§o"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/textView2"
        android:layout_alignParentTop="true"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Maps"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btMaps"
        android:layout_below="@+id/editEndereco"
        android:layout_alignParentStart="true"
        android:layout_marginTop="12dp" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:id="@+id/editEndereco"
        android:layout_marginTop="14dp"
        android:layout_below="@+id/textView2"
        android:layout_alignParentStart="true" />

    <Button
        android:text="Fotos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btMaps"
        android:layout_alignParentStart="true"
        android:layout_marginTop="39dp"
        android:id="@+id/btFotos" />

    <Button
        android:text="Video"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btFotos"
        android:layout_toEndOf="@+id/editEndereco"
        android:layout_marginStart="20dp"
        android:id="@+id/btVideo" />

    <EditText
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:inputType="textPersonName"
        android:ems="10"
        android:layout_below="@+id/btFotos"
        android:layout_alignParentStart="true"
        android:layout_marginTop="69dp"
        android:id="@+id/editSMs"
        android:layout_alignParentEnd="true" />

    <Button
        android:text="SMS"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/editSMs"
        android:layout_alignParentStart="true"
        android:layout_marginTop="28dp"
        android:id="@+id/btSMS" />

    <Button
        android:text="Tela 3"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_below="@+id/btSMS"
        android:layout_alignParentEnd="true"
        android:id="@+id/btTela3" />
</RelativeLayout>
