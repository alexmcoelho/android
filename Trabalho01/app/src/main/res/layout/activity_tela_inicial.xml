<?xml version="1.0" encoding="utf-8"?>
<RelativeLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_main"
    android:layout_width="fill_parent"
    android:layout_height="fill_parent"
    android:paddingBottom="@dimen/activity_vertical_margin"
    android:paddingLeft="@dimen/activity_horizontal_margin"
    android:paddingRight="@dimen/activity_horizontal_margin"
    android:paddingTop="@dimen/activity_vertical_margin"
    android:orientation="horizontal"
    android:background="#82d88d"
    tools:context="com.example.alexm.trabalho01.TelaInicial">

    <ImageView
        android:layout_width="wrap_content"
        android:layout_height="90dp"
        android:layout_gravity="center"
        android:src="@drawable/logoifc"
        android:id="@+id/imageView"
        android:background="#cbd2cc"
        android:padding="20dp" />

    <Button
        android:text="Cadastrar Notas"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:layout_alignTop="@+id/btCadAluno"
        android:layout_alignParentStart="true"
        android:layout_marginTop="77dp"
        android:id="@+id/btNotas"
        android:layout_alignParentEnd="true"
        android:background="#349a46" />

    <Button
        android:text="Cadastrar Alunos"
        android:layout_width="wrap_content"
        android:layout_height="wrap_content"
        android:id="@+id/btCadAluno"
        android:background="#349a46"
        android:layout_alignParentStart="true"
        android:layout_marginTop="151dp"
        android:layout_alignParentEnd="true" />
    </RelativeLayout>