<?xml version="1.0" encoding="utf-8"?>
<LinearLayout
    xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:app="http://schemas.android.com/apk/res-auto"
    android:id="@+id/activity_login"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:background="#39b54a"
    android:orientation="vertical">

    <LinearLayout
        android:orientation="vertical"
        android:background="#39b54a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="SIGAA - Login"
            android:textSize="30dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView2"
            android:textStyle="bold" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:background="#cbd2cc"
        android:layout_height="wrap_content">

        <ImageView
            android:layout_width="300dp"
            android:layout_height="90dp"
            android:layout_gravity="center"
            android:src="@drawable/logoifc"
            android:id="@+id/imageView"
            android:padding="20dp" />
    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="wrap_content"
        android:paddingLeft="10dp"
        android:paddingRight="10dp"
        android:background="#82d88d">

        <TextView
            android:text="Login:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#010101"
            android:layout_weight="1"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edLogin"
            android:background="#FFFFFF"
            android:textSize="40dp"
            android:layout_weight="1"
            android:padding="5dp" />

        <TextView
            android:text="Senha:"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:textSize="30dp"
            android:textColor="#010101"
            android:layout_weight="1"
            android:padding="5dp" />

        <EditText
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:ems="10"
            android:id="@+id/edSenha"
            android:background="#FFFFFF"
            android:textSize="40dp"
            android:layout_weight="1"
            android:password="true"
            android:padding="5dp" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_gravity="right"
            android:layout_width="wrap_content"
            android:layout_height="match_parent"
            android:layout_weight="1"
            android:layout_marginTop="10dp"
            android:layout_marginBottom="10dp">

            <Button
                android:text="Login"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:id="@+id/btLogin"
                android:background="#349A46"
                android:textColor="#CA2027"
                android:textSize="40dp"
                android:layout_weight="1"
                android:padding="5dp"/>
        </LinearLayout>

    </LinearLayout>

    <LinearLayout
        android:orientation="vertical"
        android:background="#39b54a"
        android:layout_width="match_parent"
        android:layout_height="wrap_content">

        <TextView
            android:text="Sistema Integrado de Gestão de Atividades Acadêmicas"
            android:textSize="20dp"
            android:textColor="#FFFFFF"
            android:layout_gravity="center"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:id="@+id/textView4"
            android:gravity="center"
            android:layout_marginTop="20dp" />
    </LinearLayout>


</LinearLayout>
