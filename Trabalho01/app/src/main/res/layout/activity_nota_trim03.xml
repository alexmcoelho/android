<?xml version="1.0" encoding="utf-8"?>
<LinearLayout xmlns:android="http://schemas.android.com/apk/res/android"
    xmlns:tools="http://schemas.android.com/tools"
    android:id="@+id/activity_nota_trim01"
    android:layout_width="match_parent"
    android:layout_height="match_parent"
    android:orientation="vertical"
    tools:context="com.example.alexm.trabalho01.NotaTrim01"
    android:background="@color/fundo">

    <LinearLayout
        android:orientation="vertical"
        android:layout_width="match_parent"
        android:layout_height="match_parent"
        android:layout_margin="10dp">
        <TextView
            android:text="@string/tri03"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="25dp"
            android:textColor="#010101"
            android:id="@+id/txTrimestre"
            android:textStyle="normal|bold" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="22dp"
            android:textColor="#010101"
            android:id="@+id/txNomeAlunoTri03" />

        <TextView
            android:text=""
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_alignParentTop="true"
            android:layout_alignParentStart="true"
            android:textSize="22dp"
            android:textColor="#010101"
            android:id="@+id/txSerieAlunoTri03" />

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <TextView
                android:text="NOTA"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:textColor="#010101"
                android:id="@+id/TX01"
                android:layout_weight="1"
                android:textAlignment="center"
                android:textStyle="bold"/>

            <TextView
                android:text="PESO"
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:layout_alignParentTop="true"
                android:layout_alignParentStart="true"
                android:textSize="20dp"
                android:textColor="#010101"
                android:layout_weight="1"
                android:id="@+id/TX02"
                android:textAlignment="center"
                android:textStyle="bold"/>

        </LinearLayout>

        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edNota1Tri03"
                android:layout_weight="1"
                android:hint="Nota 1"
                android:background="#ffffff"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edPeso1Tri03"
                android:layout_weight="1"
                android:hint="Peso Nota 1"
                android:background="#ffffff"
                android:textSize="30dp"
                android:layout_marginLeft="5dp"
                android:text="10"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edNota2Tri03"
                android:layout_weight="1"
                android:hint="Nota 2"
                android:background="#ffffff"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edPeso2Tri03"
                android:layout_weight="1"
                android:hint="Peso Nota 2"
                android:background="#ffffff"
                android:textSize="30dp"
                android:layout_marginLeft="5dp"
                android:text="10"
                android:textAlignment="center" />

        </LinearLayout>


        <LinearLayout
            android:orientation="horizontal"
            android:layout_width="wrap_content"
            android:layout_height="wrap_content"
            android:layout_marginTop="10dp">

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edNota3Tri03"
                android:layout_weight="1"
                android:hint="Nota 3"
                android:background="#ffffff"
                android:textSize="30dp"
                android:layout_marginRight="5dp"
                android:textAlignment="center" />

            <EditText
                android:layout_width="wrap_content"
                android:layout_height="wrap_content"
                android:inputType="textPersonName"
                android:ems="10"
                android:id="@+id/edPeso3Tri03"
                android:layout_weight="1"
                android:hint="Peso Nota 3"
                android:background="#ffffff"
                android:textSize="30dp"
                android:layout_marginLeft="5dp"
                android:text="10"
                android:textAlignment="center" />

        </LinearLayout>

        <Button
            android:text="Continuar"
            android:layout_width="match_parent"
            android:layout_height="wrap_content"
            android:background="@color/botaoP"
            android:id="@+id/btContinuarTri03"
            android:layout_margin="15dp" />

    </LinearLayout>


</LinearLayout>
